{
  "name": "hyper.chrome",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "hyper+json browser for chrome",
  "homepage_url": "https://github.com/hypergroup/hyper.chrome",
  "default_locale": "en",
  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },
  "options_page": "options.html",
  "permissions": [
    "<all_urls>",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ]
}
